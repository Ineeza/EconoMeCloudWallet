extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 TestCoin Web Wallet
        form(name='login' method='POST' action='/')
          div.form-group
            label(for='username') User Name:
            input#username.form-control(type='text' placeholder='user name' name='username' required='')
          div.form-group
            label(for='pw') Password:
            input#password.form-control(type='password' placeholder='password' name='password' required='')
          button.btn.btn-primary(type='submit') Login
